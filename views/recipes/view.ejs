<%- include('../partials/header', { title: recipe.name }) %>
<div>
    <div class="card-body position-relative">
      <h4><%= recipe.name %></h4>
      <p>Author: <%= recipe.author %></p>
      <p>Category: <%= recipe.category?.name || 'N/A' %></p>
      <p>Description: <%= recipe.description %></p>
      <p>Ingredients: <%= recipe.ingredients %></p>
      <p>Instructions: <%= recipe.instructions %></p>
      <p>Rating: <%= recipe.rating %></p>
      <% let imgName = recipe.name.toLowerCase().replace(/\s+/g, '-'); %>
      <div style="position:absolute;right: 10px;top: 10px;">
        <img style="max-height:300px" src="/images/recipes/<%= imgName %>.jpg" alt="<%= recipe.name %>" class="img-fluid mt-3 rounded">
      </div>
      <a href="/recipes" class="card-link mt-3 d-inline-block">Back</a>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/hydra-synth/dist/hydra-synth.js"></script>
<script src="/hydra/main.js"></script>
<script src="/hydra/olivia.js"></script>
<%- include('../partials/footer') %>