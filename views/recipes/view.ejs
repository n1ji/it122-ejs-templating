<%- include('../partials/header', { title: recipe.name }) %>
<div>
  <div class="card-body position-relative">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h2><%= recipe.name %></h2>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Author:</span>
          <span style="font-size: 1em;"> <%= recipe.author %></span>
        </p>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Category:</span>
          <span style="font-size: 1em;"> <%= recipe.category?.name || 'N/A' %></span>
        </p>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Description:</span><br />
          <span style="font-size: 1em;"><%- recipe.description.replace(/\r?\n/g, '<br />') %></span>
        </p>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Ingredients:</span><br />
          <span style="font-size: 1em;"><%- recipe.ingredients.replace(/\r?\n/g, '<br />') %></span>
        </p>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Instructions:</span><br />
          <span style="font-size: 1em;"><%- recipe.instructions.replace(/\r?\n/g, '<br />') %></span>
        </p>
        <p>
          <span style="font-size: 1.2em; font-weight: bold;">Rating:</span>
          <span style="font-size: 1em;"> <%= recipe.rating %></span>
        </p>
      </div>
      <div class="col-md-4 text-center">
        <img
          style="max-height: 300px"
          src="/images/recipes/<%= recipe._id %>.jpg"
          alt="<%= recipe.name %>"
          class="img-fluid rounded"
        />
        <div class="button-row mt-3">
          <a href="/recipes" class="plain-link-btn">Back</a>
          <a href="/recipes/edit/<%= recipe._id %>" class="plain-link-btn"
            >Edit</a
          >
          <a href="/recipes/upload-pic/<%= recipe._id %>" class="plain-link-btn"
            >Upload Pic</a
          >
          <form
            action="/recipes/<%= recipe._id %>?_method=DELETE"
            method="POST"
            style="display: inline"
            onsubmit="return confirm('Are you sure you want to permanently delete this recipe?');"
          >
            <button type="submit" class="plain-link-btn">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/hydra-synth/dist/hydra-synth.js"></script>
  <script src="/hydra/main.js"></script>
  <script src="/hydra/olivia.js"></script>
  <%- include('../partials/footer') %>
</div>
